<h2>Listing hours</h2>

<table class="table table-bordered table-striped">
  <tr>
    <th>Monday</th>
    <th>Tuesday</th>
    <th>Wednesday</th>
    <th>Thursday</th>
    <th>Friday</th>
    <th>Saturday</th>
    <th>Sunday</th>
    <th>Semester</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hours.each do |hour| %>
  <tr>
    <td><%= hour.monday %></td>
    <td><%= hour.tuesday %></td>
    <td><%= hour.wednesday %></td>
    <td><%= hour.thursday %></td>
    <td><%= hour.friday %></td>
    <td><%= hour.saturday %></td>
    <td><%= hour.sunday %></td>
    <td><%= link_to hour.semester.name, hour.semester %></td>
    <td><%= link_to hour.location, hour.location %></td>
    <td><%= link_to 'Show', hour %></td>
    <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
    <td><%= link_to 'Destroy', hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

