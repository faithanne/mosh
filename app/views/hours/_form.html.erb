<%= simple_form_for(@hour, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :monday, label: 'Monday' %>
  <%= f.input :tuesday, label: 'Tuesday' %>
  <%= f.input :wednesday, label: 'Wednesday' %>
  <%= f.input :thursday, label: 'Thursday' %>
  <%= f.input :friday, label: 'Friday' %>
  <%= f.input :saturday, label: 'Saturday' %>
  <%= f.input :sunday, label: 'Sunday' %>
  <%= f.association :semester, label_method: :term, value_method: :id %>
  <%= f.association :location, label_method: :room, value_method: :id %>
  <%= f.button :submit %>
<% end %>
