<h2>Listing semesters</h2>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Advisement start</th>
    <th>Advisement end</th>
    <th>Term</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @semesters.each do |semester| %>
  <tr>
    <td><%= semester.name %></td>
    <td><%= semester.start_date %></td>
    <td><%= semester.end_date %></td>
    <td><%= semester.advisement_start %></td>
    <td><%= semester.advisement_end %></td>
    <td><%= semester.term.name %></td>
    <td><%= semester.year %></td>
    <td><%= link_to 'Show', semester %></td>
    <td><%= link_to 'Edit', edit_semester_path(semester) %></td>
    <td><%= link_to 'Destroy', semester, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

