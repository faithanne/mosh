<h2>Listing softwares</h2>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Year</th>
    <th>Comment</th>
    <th>Source url</th>
    <th>Software category</th>
    <th>Version</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @softwares.each do |software| %>
  <tr>
    <td><%= software.name %></td>
    <td><%= software.year %></td>
    <td><%= software.comment %></td>
    <td><%= software.source_url %></td>
    <td><%= software.software_category.name %></td>
    <td><%= software.version %></td>
    <td><%= link_to 'Show', software %></td>
    <td><%= link_to 'Edit', edit_software_path(software) %></td>
    <td><%= link_to 'Destroy', software, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

