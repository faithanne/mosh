<%= simple_form_for(@silent_install, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :name, label: 'Silent Install Name:' %>
  <%= f.input :file_name %>
  <%= f.input :storage_location %>
  <%= f.input :creation_date %>
  <%= f.input :comment %>
  <%= f.association :user, label_method: :email, value_method: :id, label: 'Created by' %>
  <%= f.association :software %>
  <%= f.button :submit %>
<% end %>
