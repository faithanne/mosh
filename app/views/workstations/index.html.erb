<h2>Listing workstations</h2>

<table class="table table-bordered table-striped">
  <tr>
    <th>Workstation name</th>
    <th>Location</th>
    <th>Number</th>
    <th>Workstation type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workstations.each do |workstation| %>
  <tr>
    <td><%= workstation.name %></td>
    <td><%= link_to workstation.location.name, workstation.location %></td>
    <td><%= workstation.number %></td>
    <td><%= workstation.workstation_type.name %></td>
    <td><%= link_to 'Show', workstation %></td>
    <td><%= link_to 'Edit', edit_workstation_path(workstation) %></td>
    <td><%= link_to 'Destroy', workstation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

