<%= simple_form_for(@request, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :name, label: 'Software name' %>
  <%= f.input :year %>
  <%= f.input :comment %>
  <%= f.input :source_url %>
  <%= f.input :instructions %>
  <%= f.association :request_status %>
  <%= f.association :user, label_method: :name, label: 'Requested by', value_method: :id %>
  <%= f.association :image %>
  <%= f.association :software %>
  <%= f.button :submit %>
<% end %>
