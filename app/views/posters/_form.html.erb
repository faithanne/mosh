<%= simple_form_for(@poster , :html => { :multipart => true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>

    <%= f.input :date_needed, :as => :datetime_picker %>

    <%= f.input :special_request %>

    <%= f.input :created_at %>

    <%= f.file_field :image %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>