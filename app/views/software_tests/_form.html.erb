<%= simple_form_for(@software_test, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :name %>
  <%= f.association :user, label_method: :email, value_method: :id, label: 'Student tester' %>
  <%= f.input :student_test_date %>
  <%= f.association :user, label_method: :email, value_method: :id, label: 'Faculty tester' %>
  <%= f.input :faculty_test_date %>
  <%= f.input :email_confirmation_date %>
  <%= f.input :comment %>
  <%= f.association :software, label_method: :name, value_method: id %>
  <%= f.button :submit %>
<% end %>
