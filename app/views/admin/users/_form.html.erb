<%= simple_form_for([:admin, @user], html: { class: 'form-horizontal' } ) do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :management %>
  <%= f.input :admin %>
  <%= f.input :non_csit_faculty, label: 'Non-CS/IT Faculty' %>
  <%= f.button :submit %>
<% end %>
